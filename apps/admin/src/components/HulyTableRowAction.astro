---
// HulyTableRowAction.astro: Table row action button matching Huly's design system
const { label, variant = 'secondary' } = Astro.props;
---
<button class={`hulyTableRowAction hulyTableRowAction--${variant}`}>
  {label}
</button>

<style>
  .hulyTableRowAction {
    display: inline-flex;
    align-items: center;
    padding: 0.25rem 0.5rem;
    font-size: 0.75rem;
    font-weight: 500;
    line-height: 1rem;
    border: 1px solid transparent;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.15s ease;
    text-decoration: none;
    margin-right: 0.5rem;
  }

  .hulyTableRowAction:last-child {
    margin-right: 0;
  }

  .hulyTableRowAction--secondary {
    color: var(--theme-content-color, rgba(255, 255, 255, 0.8));
    background-color: transparent;
  }

  .hulyTableRowAction--secondary:hover {
    color: var(--theme-caption-color, #FFF);
    background-color: var(--theme-bg-accent-color, rgba(255, 255, 255, 0.04));
  }

  .hulyTableRowAction--danger {
    color: var(--theme-state-negative-color, #CB4B42);
    background-color: transparent;
  }

  .hulyTableRowAction--danger:hover {
    color: var(--theme-state-negative-hover, #B2423A);
    background-color: var(--theme-state-negative-background-color, rgba(203, 75, 66, 0.15));
  }
</style>
