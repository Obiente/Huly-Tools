---
import DashboardLayout from '../layouts/DashboardLayout.astro';
import HulyPageTitle from '../components/HulyPageTitle.astro';
import HulyButton from '../components/HulyButton.astro';
import HulyDashboardCard from '../components/HulyDashboardCard.astro';
---

<DashboardLayout>
  <HulyPageTitle title="Huly.io Admin Dashboard" />
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <HulyDashboardCard 
      title="Users" 
      description="Manage user accounts and permissions" 
      href="/users"
    >
      <HulyButton kind="primary" label="View Users" />
    </HulyDashboardCard>
    <HulyDashboardCard 
      title="Workspaces" 
      description="Manage organizational workspaces" 
      href="/workspaces"
    >
      <HulyButton kind="primary" label="View Workspaces" />
    </HulyDashboardCard>
    <HulyDashboardCard 
      title="Tasks" 
      description="View and manage tasks across all workspaces" 
      href="/tasks"
    >
      <HulyButton kind="primary" label="View Tasks" />
    </HulyDashboardCard>
  </div>
</DashboardLayout>
