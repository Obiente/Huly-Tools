---
// TableRowAction.astro: Reusable action button for table rows
// Props: label (string), color (string)
const { label, color = 'blue' } = Astro.props;
const colorClass = color === 'red' ? 'text-red-600 hover:underline' : 'text-blue-600 hover:underline mr-2';
---
<button class={colorClass}>{label}</button>
